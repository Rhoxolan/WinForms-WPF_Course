<Window x:Class="PW_2022._05._30_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_2022._05._30_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <UniformGrid Columns="3" Rows="3" Margin="1">
        <UniformGrid.Resources>
            <Style x:Key="Xs button">
                <Setter Property="ItemsControl.Background" Value="Moccasin"></Setter>
                <Setter Property="ItemsControl.Foreground" Value="Blue"></Setter>
            </Style>
            <Style x:Key="Os button">
                <Setter Property="ItemsControl.Background" Value="PaleGreen"></Setter>
                <Setter Property="ItemsControl.Foreground" Value="Red"></Setter>
            </Style>
        </UniformGrid.Resources>
    </UniformGrid>
</Window>
